<div class="container py-4 py-md-5" data-controller="auction">

  <!-- Header -->
  <div class="mb-3 mb-md-4">
    <h1 class="h3 page-title mb-1">My ENS Domains</h1>
    <p class="page-subtitle mb-0">Select a name you want to sell.</p>
  </div>

  <!-- Filters + Search -->
  <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3 mb-3">
    <!-- Free text search -->
    <div class="search-wrap position-relative w-100 w-lg-auto" style="max-width:420px;">
      <svg class="search-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true">
        <path d="M11 19a8 8 0 1 1 5.292-13.708A8 8 0 0 1 11 19Zm10 2-5.4-5.4" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      </svg>
      <%= form_with url: account_assets_path(@account_address), method: :get, local: false, class: "d-flex" do |form| %>
        <%= form.text_field :search, value: @search_query, class: "form-control", placeholder: "Search namesâ€¦", aria: { label: "Search names" } %>
      <% end %>
    </div>
  </div>

  <!-- Table Card -->
  <div class="card shadow-soft">
    <div class="table-responsive">
      <table class="table align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Expiry (UTC)</th>
            <th scope="col" class="text-end">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @results.each do |result| %>
            <tr data-name="<%= result.name %>" data-expiry="<%= result.expires_at.to_i %>">
              <td class="name-cell"><%= result.name %></td>
              <td class="expiry-cell"><%= result.expires_at.utc.strftime("%Y-%m-%d %H:%M:%S") %></td>
              <td class="text-end">
                <a class="btn btn-register btn-sm" href="https://app.ens.domains/<%= result.name %>/register" target="_blank" rel="noopener">Renew</a>
                <% if result.expires_at.to_i > Time.current.to_i %>
                  <button class="btn btn-register btn-sm" 
                          data-action="click->auction#openModal"
                          data-auction-target="sellButton"
                          data-nft-address="<%= result.contract_address %>"
                          data-token-id="<%= result.token_id %>"
                          data-domain-name="<%= result.name %>"
                          data-contract-address="<%= Ethereum::Chain::AUCTION_CONTRACT_ADDRESS %>">
                    Sell
                  </button>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Auction Modal -->
  <div class="modal fade" id="auctionModal" tabindex="-1" aria-labelledby="auctionModalLabel" aria-hidden="true" 
       data-auction-target="modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="auctionModalLabel">Create Auction</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form data-auction-target="form">
            <div class="mb-3">
              <label class="form-label">Domain Name</label>
              <input type="text" class="form-control" data-auction-target="domainNameDisplay" readonly>
            </div>
            
            <div class="mb-3">
              <label for="startPrice" class="form-label">Starting Price (USD)</label>
              <div class="input-group">
                <span class="input-group-text">$</span>
                <input type="number" 
                       class="form-control" 
                       id="startPrice" 
                       data-auction-target="startPriceInput"
                       min="0.01" 
                       step="0.01" 
                       placeholder="0.00"
                       required>
              </div>
              <div class="form-text">The starting price for your auction in USD</div>
            </div>
            
            <div class="mb-3">
              <label for="durationDays" class="form-label">Duration (Days)</label>
              <select class="form-select" id="durationDays" data-auction-target="durationInput" required>
                <option value="">Select duration...</option>
                <option value="1">1 day</option>
                <option value="3">3 days</option>
                <option value="7">7 days</option>
                <option value="14">14 days</option>
                <option value="30">30 days</option>
              </select>
              <div class="form-text">How long the auction will run</div>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" 
                  class="btn btn-primary" 
                  data-auction-target="createButton"
                  data-action="click->auction#createAuction">
            Create Auction
          </button>
        </div>
      </div>
    </div>
  </div>

</div>
