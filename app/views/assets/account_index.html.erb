<div class="container py-4 py-md-5">

  <!-- Header -->
  <div class="mb-3 mb-md-4">
    <h1 class="h3 page-title mb-1">My ENS Domains</h1>
    <p class="page-subtitle mb-0">Select a name you want to sell.</p>
  </div>

  <!-- Filters + Search -->
  <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3 mb-3">
    <!-- Free text search -->
    <div class="search-wrap position-relative w-100 w-lg-auto" style="max-width:420px;">
      <svg class="search-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true">
        <path d="M11 19a8 8 0 1 1 5.292-13.708A8 8 0 0 1 11 19Zm10 2-5.4-5.4" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      </svg>
      <%= form_with url: account_assets_path(@account_address), method: :get, local: false, class: "d-flex" do |form| %>
        <%= form.text_field :search, value: @search_query, class: "form-control", placeholder: "Search namesâ€¦", aria: { label: "Search names" } %>
      <% end %>
    </div>
  </div>

  <!-- Table Card -->
  <div class="card shadow-soft">
    <div class="table-responsive">
      <table class="table align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Expiry (UTC)</th>
            <th scope="col" class="text-end">Action</th>
          </tr>
        </thead>
        <tbody>
          <!-- Sample rows. Use the data attributes to hook your JS later. -->
           <% @results.each do |result| %>
            <tr data-name="<%= result["domain"]["name"] %>" data-expiry="<%= result["expiryDate"] %>">
              <td class="name-cell"><%= result["domain"]["name"] %></td>
              <td class="expiry-cell"><%= Time.at(result["expiryDate"].to_i).utc.strftime("%Y-%m-%d %H:%M:%S") %></td>
              <td class="text-end">
                <a class="btn btn-register btn-sm" href="https://app.ens.domains/<%= result["domain"]["name"] %>/register" target="_blank" rel="noopener">Renew</a>
                <% if result["expiryDate"].to_i > Time.current.to_i %>
                  <button class="btn btn-register btn-sm" >Sell</a>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
